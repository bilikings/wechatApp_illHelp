<!--index.wxml-->
<view class="container">




  <!-- 用户 openid -->
  <view class="userinfo">
    <button 
      open-type="getUserInfo" 
      bindgetuserinfo="onGetUserInfo"
      class="userinfo-avatar"
      style="background-image: url({{avatarUrl}})"
      size="default"
    ></button>
    <view class="userinfo-nickname-wrapper">
      <button class="userinfo-nickname" bindtap="onReport">登记</button>
    </view>
  </view>





  <!-- 登记 -->
  <view class="uploader">
    <navigator url="../report/report" open-type="navigate" class="uploader-text">
      <text>登记</text>
    </navigator>
  </view>





  <!-- 回家 -->
  <view class="uploader">
    <navigator url="../im/im" open-type="navigate" class="uploader-text">
      <text>回家</text>
    </navigator>
  </view>

  <!-- 隔离户申请送菜 -->
  <view class="uploader">
    <navigator url="../addFunction/addFunction" open-type="navigate" class="uploader-text">
      <text>隔离户申请送菜</text>
    </navigator>
  </view>

  <!-- 疫情上报 -->
  <view class="uploader">
    <navigator url="../openapi/openapi" open-type="navigate" class="uploader-text">
      <text>疫情上报</text>
    </navigator>
  </view>


</view>
